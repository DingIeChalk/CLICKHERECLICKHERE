// api/secrets.js
export default function handler(req, res) {
  // Pull in the secret you set in Vercel’s Environment Variables
  const secret = process.env.MY_SUPER_SECRET

  if (!secret) {
    // In case you forgot to configure it, return an error
    return res
      .status(500)
      .json({ error: 'Secret not configured.' })
  }

  // Send back only as JSON—never exposed in your client bundle
  res.status(200).json({ secret })
}

